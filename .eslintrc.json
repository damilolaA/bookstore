{
	"extends": [
		"airbnb-base"
	],

	"plugins": [
		"import"
	],

	"env": {
		"node": true
	},

	"parserOptions": {
		"ecmaVersion": 2016,
		"sourceType": "module",
		"ecmaFeatures": {
			"arrowFunctions": true,
		    "blockBindings": true,
		    "classes": true,
		    "defaultParameters": true,
		    "destructuring": true,
		    "modules": true
		}
	},

	"rules": {
		"no-console": "off",
		"consistent-return": ["error", { "treatUndefinedAsUnspecified": false }]
	}

}